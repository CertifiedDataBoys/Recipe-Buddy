from flask import Flask
from db import Database
import os

app = Flask(__name__)
db = Database(os.getenv('MARIADB_HOST'), int(os.getenv('MARIADB_PORT')),
              os.getenv('MARIADB_USER'), os.getenv('MARIADB_PASSWORD'),
              os.getenv('MARIADB_DATABASE'))

@app.route("/")
def index():
    return render_template("index.html", os=os)

if __name__ == "__main__":

    app.run()
